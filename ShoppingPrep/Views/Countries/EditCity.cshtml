@model ShoppingPrep.Models.CityViewModel

@{
    ViewData["Title"] = "Editar Cidade";
}

<h1>Editar Cidade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StateId" />

            <partial name="_City" />

            <div class="form-group">
                <br />
                <input type="submit" value="Gravar" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model?.StateId" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




