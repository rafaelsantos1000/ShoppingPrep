@model ShoppingPrep.Data.Entities.State

@{
    ViewData["Title"] = "Apagar Região/Estado";
}

<h1>Apagar</h1>

<h3>Tem a certeza que pretende eliminar esta Região/Estado ?</h3>
<div>
    
    <partial name="_StateDetails" />
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-outline-danger" /> 
        <a asp-action="Details" asp-route-id="@Model?.Country.Id" class="btn btn-outline-success">Voltar</a>
    </form>
</div>

