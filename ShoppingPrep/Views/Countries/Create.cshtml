@model ShoppingPrep.Data.Entities.Country

@{
    ViewData["Title"] = "Novo País";
}

<h1>Novo País</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="States"/>
            <partial name="_Country" />

            <div class="form-group">
                <br />
                <input type="submit" value="Novo" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
