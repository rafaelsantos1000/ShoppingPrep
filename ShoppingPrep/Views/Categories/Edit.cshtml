@model ShoppingPrep.Data.Entities.Category

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>Editar Categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <partial name="_Category" />

            <div class="form-group">
                <br />
                <input type="submit" value="Gravar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


